@model Book

<h2>Szczegóły Książki</h2>

<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.BookId</dd>
        <dt>Tytuł</dt>
        <dd>@Model.Title</dd>
        <dt>Autor</dt>
        <dd>@Model.Author</dd>
        <dt>Cena</dt>
        <dd>@Model.Price</dd>
    </dl>
</div>
<p>
    <a asp-action="Index">Powrót do listy książek</a>
</p>
