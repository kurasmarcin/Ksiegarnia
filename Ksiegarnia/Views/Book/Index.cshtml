@model IEnumerable<Book>

<h2>Lista Książek</h2>

<table class="table">
    <thead>
        <tr>
            <th>   </th>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Cena</th>
            <th>   </th>
            
            
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@book.CoverImage" alt="Cover Image" style="max-width: 60px; max-height: 60px;" />
                </td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.BookId">Szczegóły</a> 
                   
                </td>
             
            </tr>
        }
    </tbody>
</table>
