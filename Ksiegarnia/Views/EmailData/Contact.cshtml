@page
@model Ksiegarnia.Models.ContactModel
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .contact-container {
            display: flex;
            justify-content: space-between;
            max-width: 1000px; /* Zwiększona szerokość kontenera */
            margin: 0 auto;
            padding: 30px; /* Zwiększony padding */
            background-color: #fff;
            border: 2px solid #ddd; /* Grubsza ramka */
            border-radius: 8px; /* Zaokrąglenie rogów */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .contact-info, .contact-form {
            flex: 1;
            padding: 20px;
        }

            .contact-info h2, .contact-form h2 {
                color: #333;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        textarea {
            height: 150px;
            resize: vertical;
        }

        .btn-primary {
            background-color: #3498db;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2980b9;
            }

        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
            text-decoration: none;
            color: #333;
            font-size: 14px;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="contact-container">
        <div class="contact-info">
            <h2>Księgarnia internetowa <span style="color: #3498db;">Bookshop</span></h2>
            <h3>Skontaktuj się z nami</h3>
            <p>
                <strong style=";">Adres korespondencyjny:</strong><br />
                ul.  Poznań
            </p>
            <p>
                <strong style="color: #3498db;">Email:</strong><br />
                bookshopcontact@gmail.com
            </p>
            <p>
                <strong style="color: #3498db;">Telefon:</strong><br />
                000 000 000
            </p>
        </div>

        <div class="contact-form">
            <h2>Formularz <span style="color: #3498db;">Kontaktowy</span></h2>
            <form method="post">
                <div class="form-group">
                    <label for="fullName">Imię i Nazwisko:</label>
                    <input type="text" id="fullName" name="fullName" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="email">Twój Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="subject">Temat:</label>
                    <input type="text" id="subject" name="subject" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="message">Treść wiadomości:</label>
                    <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Wyślij</button>
            </form>
        </div>
    </div>
    <a asp-action="Index" class="back-link">Powrót do Listy</a>
</body>
</html>
