@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        h1,
        h2,
        h3 {
            text-align: center;
            color: #333;
        }

        hr {
            border: 1px solid #3498db;
        }

        .row {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .col-md-4 {
            width: 100%; /* Zwiększ szerokość pola */
        }

        .col-md-6 {
            width: 55%;
        }

        .form-control {
            width: 100%;
            height: 50px;
            padding: 10px;
            border: 1px solid #ddd; /* To jest styl ramki dla pól formularza */
            border-radius: 4px;
        }

        section {
            padding: 20px;
            background-color: transparent; /* Zmiana tła na przeźroczyste */
            border-radius: 0; /* Usunięcie zaokrągleń narożników */
            box-shadow: none; /* Usunięcie efektu cienia */
        }

        }

        .form-floating {
            margin-bottom: 40px;
        }
        /* Margines pomiędzy polem Email a polem Hasło */
        #Input_Password {
            margin-top: 10px;
        }
      
        .btn-primary {
            background-color: #3498db;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #2184b7;
            }

        p {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Hasło</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                            Zapamiętaj mnie
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj</button>
                    </div>
                    <div>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Rejestruj się jako nowy użytkownik</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <script>
        // Add your scripts here
    </script>
</body>
</html>
